                <ColumnDefinition Width= "5*" x:Name="FirstColumn"/>
                <ColumnDefinition Width= "1.5*" x:Name="SecondColumn"/>
                <ColumnDefinition Width= "0.5*" x:Name="ThirdColumn"/>
